<div class="page-wrapper">
    <div id="header">
        {% if site_name %}
        <div id="site-title">
            <h1 class="title is-1">{{ site_name }}</h1>
        </div>
        {% endif %}
        <div id="main-menu">
            {{ page.primary_menu }}
        </div>
    </div>
    <div id="wrapper">
        {% if page.highlighted %}
        <div id="featured-links">
            {{ page.highlighted }}
        </div>
        {% endif %}
        {% if page.sidebar_first %} 
        <div id="sidebar-first">
            {{ page.sidebar_first }}
        </div>
        {% endif %}
        {% if page.sidebar_second %} 
        <div id="sidebar-second">
            {{ page.sidebar_second }}
        </div>
        {% endif %}
        <div id="page-content">
            {{ page.content }}
        </div>
    </div>
    <footer class="footer" id="footer">
        {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
        <div class="columns">
            <div class="column" id="footer_first">{{ page.footer_first }}</div>
            <div class="column" id="footer_second">{{ page.footer_second }}</div>
            <div class="column" id="footer_third">{{ page.footer_third }}</div>
            <div class="column" id="footer_fourth">{{ page.footer_fourth }}</div>
        </div>
        {% endif %}
        {% if page.footer %}
        <div class="columns">
            <div class="column has-text-centered">
                {% if page.footer %}    
                    {{ page.footer }}
                {% endif %}
            </div>
        </div>
        {% endif %}
    </footer>
</div>